.header
	width 100%
	min-width $min-width
	order 1
	padding: 40px 0 0 0
	position fixed
	transition: $default-transition
	top 0
	backdrop-filter: blur(5px) 
	z-index 999
	transform: translateY(0)
	&.fixed
		background: rgba(255,255,255,.5)
		padding: 10px 0
	&.hidden
		transform: translateY(-100%)
	&__logo
		margin-right auto
		a
			&:hover
				opacity 1
	&__wrapper
		display flex
		justify-content: center
		align-items: center
	&__nav
		margin-right 330px
		transition: .5s
		.header__search
			display none
		&-list
			display flex
			justify-content: space-between
			gap: 40px
			&-item
				a
					padding: 10px 0
					position relative
					svg
						position absolute
						top: 0px
						left: -13%
						transform: scale(1.15)
						path
							stroke-dasharray: 500
							stroke-dashoffset: 500
							transition: 0.5s
					&:hover
						opacity 1
						path
							stroke-dashoffset: 0
							transition: 0.8s 
							transition-timing-function: cubic-bezier(.64,.14,.2,.33)
	&__buttons
		display flex
		justify-content: space-between
		align-items: center
		gap: 60px
	&__burger
		width: 24px
		height: 18px
		transition: $default-transition
		position relative
		display none
		z-index -1
		&-item
			display inline-block
			width: 100%
			height: 2px
			background: #363636
			border-radius: 2px
			position relative
			transition: $default-transition
			&:nth-child(1)
				top: 0
			&:nth-child(2)
				left: 0
				opacity 1
			&:nth-child(3)
				bottom: 0
			

	&__phone
		a
			display flex
			justify-content: space-between
			align-items: center
			gap: 12px
			padding: 5px 0
			svg
				overflow: visible
				path
					transform-origin: center
			&:hover
				opacity 1
		&-number
			color: $accent
	&__search
		cursor pointer
		transition: $default-transition
		display none
		padding: 5px 0
		&:hover
			opacity .5



.active
	overflow: hidden
	.header
		&__nav
			transform: translateY(0)
			.header__search
				display block
		&__buttons
			display flex
			justify-content: space-between
			align-items: center
			gap: 30px
		&__burger
			&-item
				&:nth-child(1)
					transform: rotate(-45deg)
					top: 8px
				&:nth-child(2)
					left: 24px
					opacity 0
				&:nth-child(3)
					transform: rotate(45deg)
					bottom: 8px





	
