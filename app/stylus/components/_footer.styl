.footer
	width 100%
	min-width $min-width
	order 3
	padding-bottom 80px
	&__logo
		a
			&:hover
				opacity 1
	&__wrapper
		display flex
		justify-content: space-between
		& > .footer__social
			display none
	&__item
		display flex
		flex-direction: column
	&__title
		font-weight: 400;
		font-size: 16px;
		line-height: 20px;
		text-transform: uppercase;
		color: $blue
		margin-bottom 10px
		max-width: 126px
	&__desc
		max-width: 136px
		font-size: 12px;
		line-height: 19px;
	&__list
		&-item
			&:not(:last-child)
				margin-bottom 15px
			a
				font-size 12px
				line-height 12px
				&:hover
					opacity .5
		.item-hidden
			display none
	&__social
		margin-top 46px
		display flex
		justify-content: space-between
		gap 10px
		&-item
			a
				position relative
				z-index 2
				top: 0
				transition: $default-transition
				&:before
					content ""
					position absolute
					width: 100%
					height: 100%
					border-radius: 50%
					background: #088EA4
					display block
					z-index -5
					top: 4px
					transition: $default-transition
				img
					background #fff
					border-radius: 50%
				&:hover
					top: 4px
					opacity 1
					&:before
						top: 0
	&__copyright
		display block
		margin-top 46px
		font-size 12px
		line-height 12px
		text-align left
		
